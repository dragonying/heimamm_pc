<?php
function test()
{
    static $count = 0;
    
    $count++;
    echo $count;
    if ($count < 10) {
        test();
    }
    $count--;
}

function foo(){
    static $int = 0;          // correct
    static $int = 1+2;        // wrong  (as it is an expression)
   // static $int = sqrt(4);  // wrong  (as it is an expression too)

    $int++;
    echo $int;
}

foo();